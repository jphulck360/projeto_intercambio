<p id="notice"><%= notice %></p>

<div id="titulo" class="page-header">
  Períodos
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Período</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.id %></td>
        <td><%= period.duracao %></td>
        <td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="link_centro">
<%= link_to image_tag("periodo.png",:title => 'Cadastrar período',size: "50"), new_period_path %>
</div>

<br>
<%= will_paginate @periods %> <!-- Fazer paginação -->
<br>



