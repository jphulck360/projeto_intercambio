<div id="titulo" class="page-header">
  Busca Normal:
</div>

<%= search_form_for @q, url: course_universities_busca_normal_path do |f| %>
<%# search_form_for @q do |f| %>
  <table align="center">
    <tr>
      <td>
        <%= f.label 'Cursos:' %>
        <%# text_field_tag :busca_curso %>
        <%= f.collection_select(:course_id_start, Course.all, :id, :nome, {:include_blank => '--- Selecione uma opção ---'}) %>
      </td>
      <td>
        <br>
        <%= f.submit 'Buscar' %>
      </td>
    </tr>
  </table>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Curso</th>
      <th>Universidade</th>
      <th>País</th>
      <th>Custo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |c_uni| %>
      <tr>
        <td><%= c_uni.id %></td>
        <td><%= c_uni.course.nome %></td>
        <td><%= c_uni.university.nome %></td>
        <td><%= Country.find_by(id: c_uni.university.country_id).nome %></td>
        <td><%= Cost.find_by(id: c_uni.university.cost_id).custo %></td>
      </tr>
    <% end %>
  </tbody>
</table>