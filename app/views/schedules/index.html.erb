<p id="notice"><%= notice %></p>

<div id="titulo" class="page-header">
  Agendamentos
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Data Saída</th>
      <th>Data Retorno</th>
      <th>Dias</th>
      <th>Preço</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.id %></td>
        <td><%= schedule.dt_saida %></td>
        <td><%= schedule.dt_retorno %></td>
        <td><%= schedule.dias %></td>
        <td><%= schedule.preco %></td>
        <td><%= schedule.obs %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="link_centro">
<%= link_to image_tag("agendamento.png",:title => 'Realizar agendamento',size: "50"), new_schedule_path %>
</div>

<br>
<%= will_paginate @schedules %> <!-- Fazer paginação -->
