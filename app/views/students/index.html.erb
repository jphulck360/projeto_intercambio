<p id="notice"><%= notice %></p>

<div id="titulo" class="page-header">
  Lista de Estudantes
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Univ origem</th>
      <th>Cidade</th>
      <th>Pais</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.nome %></td>
        <td><%= student.cpf %></td>
        <td><%= student.telefone %></td>
        <td><%= student.univ_origem %></td>
        <td><%= student.cidade %></td>
        <td><%= student.pais %></td>
        <td><%= student.endereco %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="link_centro">
<%= link_to image_tag("estudante.png",:title => 'Cadastrar estudante',size: "50"), new_student_path %>
</div>


